<% if user_signed_in? %>  <!--サインインしているユーザーか-->
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>　<!--検索内容をwordとしてアクションに送る-->
      <%= f.select :range, options_for_select([['User'], ['Book']]) %>　<!--UserモデルとBookモデルを選択できるようにする＋選択したモデルをrangeとしてアクションに送る-->
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backword_match"], ["部分一致","partial_match"]]) %>
      <!--検索手法を定義-->
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>